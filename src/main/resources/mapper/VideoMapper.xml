  <select id="goodLuck" resultMap="videoVOMap">
    SELECT *
    FROM `video` AS t1 JOIN (SELECT ROUND(RAND() * (SELECT MAX(id) FROM `video`)) AS id) AS t2
    WHERE t1.id >= t2.id
    ORDER BY t1.id
